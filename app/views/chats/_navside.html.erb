<div class="panel with-nav-tabs panel-info">
  <div class="panel-heading">
    <ul class="nav nav-tabs">
      <li class=<%= contact_active %>>
        <a href="#contact-tab" data-toggle="tab"><i class="fa fa-book"></i>好友列表</a>
      </li>
      <li class=<%= chat_active %>>
        <a href="#chat-tab" data-toggle="tab"><i class="fa fa-home"></i>聊天房间</a>
      </li>
      <li class=<%= @newfriends %>>
        <a href="#newfriends-tab" data-toggle="tab"><i class="fa fa-bell"></i>好友申请</a>
      </li>
      <li class=<%= @apply %>>
        <a href="#apply-tab" data-toggle="tab"><i class="fa fa-commenting "></i>等待回应</a>
      </li>
    </ul>
  </div>
  <div class="panel-body" id="tab-panel-body">
    <div class="tab-content">
      <div class="tab-pane fade in <%= contact_active %>" id="contact-tab">
        <ul class="list-group">
          <% @friends.each do |user| %>
              <li class="list-group-item" style="padding: 0px; margin-bottom: 0px;">

                <button class="btn btn-default btn-block" data-toggle="collapse" data-target="#user-<%= user.id %>" id="tab-contact-default">
                  <!--<%= image_tag "user-icon.png", class: "img-sm" %>-->
                  <i class="fa fa-user fa-3x"></i>
                  <div class="text-muted">
                    <%= user.name %>
                  </div>
                </button>

                <div id="user-<%= user.id %>" class="collapse">
                  <%= form_for Chat.new, url: chats_path, method: :post do |f| %>
                      <%= hidden_field_tag :users, [user.id] %>
                      <%= button_tag(:class => "btn btn-info btn-block", style: "margin-bottom: 3px; margin-top: 3px; margin-left: 2px; margin-right:2px; ") do %>
                          <i class="fa fa-rocket"></i> 发起聊天
                      <% end %>
                  <% end %>
                  <%= link_to user_path(user), class: 'btn btn-info btn-block', role: "button", style: "margin-bottom: 3px; margin-top: 3px; margin-left: 2px; margin-right:2px; " do %>
                      <i class="fa fa-rocket"></i> 用户详情
                  <% end %>
                  <%= link_to friendship_path(user), method: :delete, class: 'btn btn-info btn-block', role: "button", style: "margin-bottom: 6px; margin-top: 3px; margin-left: 2px; margin-right:2px; " do %>
                      <i class="fa fa-rocket"></i> 删除用户
                  <% end %>
                </div>
              </li>
          <% end %>
        </ul>
      </div>

      <div class="tab-pane fade in <%= chat_active %>" id="chat-tab">
        <ul class="list-group">
          <% current_user.chats.each do |chatroom| %>
              <%= link_to chat_path(chatroom), class: 'list-group-item' do %>
                  <i class="fa fa-home"></i> <%= truncate(chatroom.name, length: 20) %>
                  <text id="chatroom-<%= chatroom.id %>"></text>
              <% end %>
          <% end %>
        </ul>
      </div>

      <div class="tab-pane fade in <%= @newfriends %>" id="newfriends-tab">
        <ul class="list-group">
          <% @newfriends.each do |user| %>
              <li class="list-group-item" style="padding: 0px; margin-bottom: 0px;">

              <button class="btn btn-default btn-block" data-toggle="collapse" data-target="#user-<%= user.id %>" id="tab-contact-default">
                <i class="fa fa-user fa-3x"></i>
                <div class="text-muted">
                  <%= user.name %>
                </div>
              </button>

              <div id="user-<%= user.id %>" class="collapse">
                <%= link_to friendship_path(user), method: :post, class: 'btn btn-info btn-block', role: "button", style: "margin-bottom: 3px; margin-top: 3px; margin-left: 2px; margin-right:2px; " do %>
                    <i class="fa fa-angle-right"></i> 同意
                <% end %>
                <%= link_to friendship_path(user), method: :delete, class: 'btn btn-info btn-block', role: "button", style: "margin-bottom: 3px; margin-top: 3px; margin-left: 2px; margin-right:2px; " do %>
                    <i class="fa fa-angle-right"></i> 拒绝
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="tab-pane fade in <%= @apply %>" id="apply-tab">
        <ul class="list-group">
          <% @apply.each do |user| %>
	          <li class="list-group-item" style="padding: 0px; margin-bottom: 0px;">

	            <button class="btn btn-default btn-block" data-toggle="collapse" data-target="#user-<%= user.id %>" id="tab-contact-default">
	              <i class="fa fa-user fa-3x"></i>
	              <div class="text-muted">
	                <%= user.name %>
	              </div>
	            </button>

	            <div id="user-<%= user.id %>" class="collapse">
	              <%= link_to friendship_path(user), method: :delete, class: 'btn btn-info btn-block', role: "button", style: "margin-bottom: 3px; margin-top: 3px; margin-left: 2px; margin-right:2px; " do %>
	                  <i class="fa fa-angle-right"></i> 撤回
	              <% end %>
	            </div>
	          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="panel-footer">
    <button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">添加朋友
    </button>
  </div>
</div>

<%= render "search_fridends" %>
